---
import AuthGuard from '../components/AuthGuard';
import AuthenticatedNavigation from '../components/AuthenticatedNavigation';
import Footer from '../components/Footer';
import '../styles/global.css';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Proyecto Astro + React + PHP" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href="/favicon.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script is:inline>
			// Set initial title based on saved language BEFORE page renders
			(function() {
				const locale = localStorage.getItem('locale') || 'en';
				const path = window.location.pathname;

				const titles = {
					'/': {
						es: 'RobiPet - Inicio',
						en: 'RobiPet - Home'
					},
					'/pets': {
						es: 'RobiPet - Mascotas',
						en: 'RobiPet - Pets'
					},
					'/config': {
						es: 'RobiPet - Configuraci√≥n',
						en: 'RobiPet - Settings'
					},
					'/users': {
						es: 'RobiPet - Usuarios',
						en: 'RobiPet - Users'
					}
				};

				if (titles[path] && titles[path][locale]) {
					document.title = titles[path][locale];
				}
			})();
		</script>
	</head>
	<body class="min-h-screen bg-dark-primary text-dark-primary flex flex-col">
		<AuthGuard client:load>
			<AuthenticatedNavigation client:load />
			<main class="flex-grow">
				<slot />
			</main>
			<Footer client:load />
		</AuthGuard>
	</body>
</html>
<style is:global>
	html {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
	}
	
	* {
		box-sizing: border-box;
	}
	
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>